<style is:global>
	/* based off of sakura.css: https://github.com/oxalorg/sakura/ */
	/* but with catppuccin theme colors */

	@import "@fontsource/inter";
	@import "@fontsource/inter/700.css";

	@import "@fontsource/iosevka";
	@import "@fontsource/iosevka/700.css";

	/* https://github.com/catppuccin/catppuccin */
	:root {
		--base: #1e1e2e;
		--mantle: #181825;
		--surface0: #313244;
		--overlay1: #7f849c;
		--text: #cdd6f4;
		--subtext0: #a6adc8;
		--pink: #f5c2e7;
	}

	html {
		font-size: 62.5%;
		font-family: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, "Noto Sans", sans-serif;
	}

	body {
		font-size: 1.8rem;
		line-height: 1.618;
		max-width: 38em;
		margin: auto;
		color: var(--text);
		background-color: var(--base);
		padding: 13px;
	}

	@media (max-width: 684px) {
		body {
			font-size: calc(1.8rem * 0.85);
		}
	}

	@media (max-width: 382px) {
		body {
			font-size: calc(1.8rem * 0.75);
		}
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		line-height: 1.1;
		font-weight: 700;
		margin-bottom: 1rem;
		overflow-wrap: break-word;
		word-wrap: break-word;
		-ms-word-break: break-all;
		word-break: break-word;
		color: var(--pink);
	}

	h1 {
		font-size: 2.35em;
	}
	h2 {
		font-size: 2em;
	}
	h3 {
		font-size: 1.75em;
	}
	h4 {
		font-size: 1.5em;
	}
	h5 {
		font-size: 1.25em;
	}
	h6 {
		font-size: 1em;
	}

	p {
		margin-top: 0px;
		margin-bottom: 2.5rem;
	}

	small,
	sub,
	sup {
		font-size: 75%;
	}

	hr {
		border-color: var(--pink);
		border-style: solid;
	}

	a {
		text-decoration: none;
		color: var(--pink);
	}

	a:hover {
		border-bottom: 2px solid var(--pink);
	}

	ul {
		padding-left: 1.4em;
		margin-top: 0px;
		margin-bottom: 2.5rem;
	}

	li {
		margin-bottom: 0.4em;
	}

	blockquote {
		margin-left: 0px;
		margin-right: 0px;
		padding-left: 1em;
		padding-top: 0.8em;
		padding-bottom: 0.8em;
		padding-right: 0.8em;
		border-left: 5px solid var(--pink);
		margin-bottom: 2.5rem;
		background-color: var(--surface0);
	}

	blockquote small {
		font-style: italic;
		color: var(--subtext0);
	}

	blockquote small:before {
		content: "â€” ";
	}

	pre {
		background-color: var(--surface0) !important;
		display: block;
		padding: 1em;
		overflow-x: auto;
		margin-top: 0px;
		margin-bottom: 2.5rem;
		font-size: 0.9em;
		font-family: "Iosevka", monospace;
	}

	code,
	kbd,
	samp {
		font-size: 0.9em;
		padding: 0 0.5em;
		background-color: var(--surface0) !important;
		white-space: pre-wrap;
		font-family: "Iosevka", monospace;
	}

	pre code {
		padding: 0;
		background-color: transparent !important;
		white-space: pre;
		font-size: 1em;
		font-family: "Iosevka", monospace;
	}

	code {
		counter-reset: step;
		counter-increment: step 0;
	}

	code .line:before {
		content: counter(step);
		counter-increment: step;
		width: 1rem;
		margin-right: 1.5rem;
		display: inline-block;
		text-align: right;
		color: var(--overlay1);
	}

	table {
		text-align: justify;
		width: 100%;
		border-collapse: collapse;
	}

	td,
	th {
		padding: 0.5em;
		border-bottom: 1px solid var(--surface0);
	}

	summary {
		cursor: pointer;
		user-select: none;
	}

	nav {
		color: var(--pink);
	}

	#socials {
		text-align: center;
	}
</style>
